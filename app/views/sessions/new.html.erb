<%= render 'shared/menu_items_for_visitors' %>

<%= form_tag :session do %>
<ul>
  <li>
    <%= label_tag :login_name, 'ユーザー名' %>
    <%= text_field_tag :login_name %>
  </li>
  <li>
    <%= label_tag :password, 'パスワード' %>
    <%= password_field_tag :password %>
  </li>
  <li>
    <%= check_box_tag :remember_me %>
    <%= label_tag :remember_me, "次回から自動ログイン", :class => 'plain' %>
  </li>
  <li><%= submit_tag "ログイン" %></li>
</ul>
<% end %>
